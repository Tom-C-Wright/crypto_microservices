{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "rootDir": "./src",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
